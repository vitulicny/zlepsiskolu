<div class="row">
  <div class="col-xs-12">
    <div class="carouselWrapper">

      <span id="carousel-prev"><i class="glyphicon glyphicon-triangle-left"></i></span>
      <span id="carousel-next"><i class="glyphicon glyphicon-triangle-right"></i></span>

      <div class="owl-carousel">
        <%= link_to new_idea_path do %>
          <div class="item item-add col-xs-12">
            <div class="centerwrapper">
              <div class="row">
                <div class="col-xs-12">
                  <span><i class="glyphicon glyphicon-plus"></i></span>
                </div>
              </div>
              <div class="row">
                <div class="col-xs-12">
                  <button class="btn btn-lg" style="text-transform: uppercase; border-radius: 0;">Vložit nápad k hlasování</button>
                </div>
              </div>
            </div>
          </div>
        <% end %>
        <% @ideas.each do |idea| %>
          <div class="item col-xs-12 ">
            <h3><%= idea.title %></h3>
            <h4><%= idea.content %></h4>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="col-md-8">
      <h1>Listing Ideas</h1>

      <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
        <% @ideas.each do |idea| %>
          <div class="panel panel-default">
            <div class="panel-heading" role="tab" id="heading<%= idea.id %>">
              <h2 class="panel-title">
                <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapse<%= idea.id %>" aria-expanded="true" aria-controls="collapseTwo">
                    <%= idea.title %>
                    <div class="pull-right">
                      UP:
                      <%= idea.up_votes.count %>
                      DOWN:
                      <%= idea.down_votes.count %>
                      Čas do konce: <%= idea.timeout_at %>
                    </div>
                </a>
              </h2>
            </div>
            <div id="collapse<%= idea.id %>" class="panel-collapse collapse" role="tabpanel" aria-labelledby="heading<%= idea.id %>">
              <div class="panel-body">
                <p>
                  <%= idea.content %>
                </p>
                <% unless cookies[:voted_ideas].split(',').include?(idea.id.to_s) %>
                  <p>
                    <%= render 'votes/form', idea: idea %>
                  </p>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>