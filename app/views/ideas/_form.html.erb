<%= simple_form_for(@idea) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
  </div>

  <p>Čas na hlasování je jeden měsíc.</p>

  <div class="form-actions">
    <%= f.button :submit, class: "btn" %>
  </div>
<% end %>
