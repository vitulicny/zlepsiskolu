<%= simple_form_for(@idea) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, :input_html => {:maxlength => 15, :size => 40} %>
    <%= f.input :content, placeholder: "Proč by se to mělo řešit?", :size => 40, :max => 4 %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
  </div>

  <p>Čas na hlasování je jeden měsíc.</p>

  <div class="form-actions">
    <%= f.button :submit, class: "btn" %>
  </div>
<% end %>
